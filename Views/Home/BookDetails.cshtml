@model SmartManagerLibrarySystem.Models.Books

@{
    ViewBag.Title = "Rent Book";
}

<div class="container">
    <h2 class="mb-3">@Model.Name</h2>
    <div>
        <p><strong>Author:</strong> @Model.Author</p>
        <p><strong>Genre:</strong> @Model.Genre</p>
        <p><strong>Publisher:</strong> @Model.Publisher</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Quantity:</strong> @Model.Quantity</p>
        <img src="@Model.Image" class="mt-3" alt="Book Image" width="150" />
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <a href="@Url.Action("Borrow", new { id = Model.BookId })" class="btn btn-success mt-3">Borrow</a>
    }
</div>

