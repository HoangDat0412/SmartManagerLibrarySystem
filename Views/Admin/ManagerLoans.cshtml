@model IEnumerable<SmartManagerLibrarySystem.Models.Loans>
@{
    ViewBag.Title = "Manager Loans";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2>Loan Management</h2>

    <form method="get" action="@Url.Action("ManagerLoans")" class="form-inline mb-3 d-flex align-items-center row mt-4">
        <div class="form-group col-11">
            @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control ml-2", @placeholder = "Search..." })
        </div>
        <button class="btn btn-outline-success my-2 my-sm-0 col-1" type="submit">Search</button>
    </form>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.ActionLink("Loan Date", "ManagerLoans", new { sortOrder = ViewBag.LoanDateSortParm })
                </th>
                <th>
                    @Html.ActionLink("Return Date", "ManagerLoans", new { sortOrder = ViewBag.ReturnDateSortParm })
                </th>
                <th>
                    Book
                </th>
                <th>
                    User
                </th>
                <th>
                    Returned
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.LoanDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.ReturnDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Book.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Returned)</td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteLoans", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

