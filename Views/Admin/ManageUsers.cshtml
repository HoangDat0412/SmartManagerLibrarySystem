
@model IEnumerable<SmartManagerLibrarySystem.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
}

@{
    ViewBag.Title = "ManageUsers";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h2>Manager User</h2>

    <form class="form-inline my-2 my-lg-0" method="get" action="@Url.Action("ManageUsers", "Admin")">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="searchString" value="@Request.QueryString["searchString"]">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>

    <table class="table table-striped table-bordered table-hover mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Email</th>
                <th>UserName</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.UserName</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", new { id = user.Id })">Edit</a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = user.Id })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>