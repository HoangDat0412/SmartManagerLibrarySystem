
@{
    ViewBag.Title = "DeleteLoans";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model SmartManagerLibrarySystem.Models.Loans
<div class="container mt-4">
    <h2>Delete Loan</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Loan</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Loan Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LoanDate)
            </dd>
            <dt class="col-sm-2">
                Return Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReturnDate)
            </dd>
            <dt class="col-sm-2">
                Book
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Name)
            </dd>
            <dt class="col-sm-2">
                User
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.UserName)
            </dd>
            <dt class="col-sm-2">
                Returned
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Returned)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Back to List", "ManagerLoans", null, new { @class = "btn btn-secondary ml-2" })
            </div>
        }
    </div>
</div>

